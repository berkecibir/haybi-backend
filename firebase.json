{
  "hosting": {
    "public": "build/web",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/edit-image/**",
        "destination": "https://haybi-backend.onrender.com/edit-image/**"
      },
      {
        "source": "/api/**",
        "destination": "https://haybi-backend.onrender.com/api/**"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}